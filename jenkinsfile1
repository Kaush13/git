pipeline {
	environment {
    registry = "kaushdoc/docker-test"
    registryCredential = 'dockerhub'
    dockerImage = ''
	}
	  agent any
	  stages {
		  stage('One') {
   		  steps {
                         echo 'Hi,This is Kaushik'
			}
		  }
		  stage('Two') {
		  steps {
			 input('Do you want to proceed?')
			}
		  }
		  stage('Three') {
		  when {
          		not {
			      branch "master"
			    }
		       }
		  steps {
			  echo "Hello"
			}
		  }
		  stage('Four') {
		  parallel {
		  stage('Unit Test') {
		  steps {
			  echo "Running the unit test"
			}
		}
		  stage('Integration Test') {
		  agent {
			 dockerfile {
			 filename 'dockerfile'
			 }
		}
		  steps {
			 echo "Running the integration Test"
			}
		}
		  stage('Deploy') {
		   steps {
			  script {
				  docker.withRegistry( '', registryCredential ) {
            			  dockerImage.push()
}
}
}
}
}
}
}
}	 
